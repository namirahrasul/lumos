<!DOCTYPE html>
<html lang="en">
<%- include('head.ejs', { title: 'My Decks' , stylesheet: '/css/browse-campaigns.css' }) %>

    <body>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js"
            integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa"
            crossorigin="anonymous"></script>
        <%-include('navbar.ejs', { user: user }) %>

            <div id="app">
                <header class="masthead">
                    <div class="container">
                        <div class="masthead-subheading">My Decks</div>
                    </div>
                </header>



                <form id="search-form" method="POST" action="/browse/search">
                    <section class="search-section">
                        <div class="search-container">
                            <input type="text" id="search-input" name="search" placeholder="Search for decks...">
                            <button id="search-button" class="mx-2" form="search-form" type="submit">Search</button>
                            <button id="search-button" form="search-form" type="reset">Clear</button>
                        </div>
                    </section>
                </form>


                <div class="col-5"></div>
                <div class="col-11">
                    <div class="row-container">
                        <div class="dropdown">
                            <button class="button-class"><b>Sort By</b></button>
                            <div class="dropdown-content">
                                <a href="/sort/newest" id="link1">Newest</a>
                                <a href="/sort/rating" id="link2">Highest Rating</a>
                            </div>
                        </div>
                    </div>
                </div>




                <section class="campaigns">

                    <!-- Page Content -->
                    <div class="container mt-4 ">
                        <div>
                            <p class="gap"></p>
                            <% if(decks.length==0) { %>
                                <p>No results found</p>
                                <% } else {%>

                                    <% for (let i=0; i < decks.length; i +=3) { %>
                                        <div class="row mb-3 g-5">
                                            <% for (let j=i; j < i + 3 && j < decks.length; j++) { %>

                                                <div class="col-md-4 mb-lg-5 mr ">
                                                    <div class="card">
                                                        <div
                                                            class="card-body d-flex flex-column justify-content-between">
                                                            <div class="campaign-info">
                                                                <div class="card-img-container">
                                                                </div>
                                                                <h5 class="card-title fs-sm-3">
                                                                    <%= decks[j].name %>
                                                                </h5>
                                                                <p class="card-text">
                                                                    <%= decks[j].rating %>
                                                                </p>
                                                                <br>
                                                            </div>
                                                            <div class="card-actions dropdown deck-action">
                                                                <button class="btn btn-secondary dropdown-toggle"
                                                                    type="button" id="choose-dropdown"
                                                                    data-bs-toggle="dropdown" aria-expanded="false">
                                                                    Choose
                                                                </button>
                                                                <ul class="dropdown-menu"
                                                                    aria-labelledby="choose-dropdown">

                                                                    <li><a class="dropdown-item"
                                                                            href="/review/<%= decks[j].id %>">Review</a>
                                                                    </li>
                                                                    <li><a class="dropdown-item"
                                                                            href="/timed/<%= decks[j].id %>">Timed
                                                                            Mode</a></li>
                                                                    <li><a class="dropdown-item"
                                                                            href="/test/<%= decks[j].id %>">Test
                                                                            Mode</a></li>
                                                                    <li><a class="dropdown-item"
                                                                            href="/edit/<%= decks[j].id %>">Edit</a>
                                                                    </li>
                                                                    <li><a class="dropdown-item delete-deck-button"
                                                                            data-deck-id="<%= decks[j].id %>"
                                                                            data-bs-toggle="modal"
                                                                            data-bs-target="#deckDeleteModal">Delete</a>
                                                                    </li>
                                                                </ul>
                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>
                                                <% } %>
                                        </div>
                                        <% } %>
                                            <% } %>
                        </div>
                    </div>

                </section>
            </div>

            <div class="modal fade" id="deckDeleteModal" tabindex="-1" aria-labelledby="deckCompleteModalLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deckDeleteModalLabel">Delete Deck</h5>
                            <!-- <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> -->
                        </div>
                        <div class="modal-body" id="deckDeleteModalBody">
                            Are you sure you want to delete the deck?
                        </div>
                        <div class="modal-footer" id="deckDeleteModalFooter">
                            <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
                            <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>


            <script>
                document.addEventListener('DOMContentLoaded', () => {

                    const deleteButtons = document.querySelectorAll('.delete-deck-button');
                    let deckId;

                    deleteButtons.forEach(button => {
                        button.addEventListener('click', () => {
                            deckId = button.getAttribute('data-deck-id');
                            console.log("deck id inside delete button", deckId);
                            $('#deckDeleteModal').modal('show');
                        });
                    });

                    const confirmDeleteButton = document.getElementById('confirmDelete');
                    const deleteDeckModalBody = document.getElementById('deckDeleteModalBody');
                    const deleteDeckModalFooter = document.getElementById('deckDeleteModalFooter');

                    confirmDeleteButton.addEventListener('click', () => {
                        console.log("deckId inside click event confirm delete", deckId);
                        fetch(`/deck/delete/${deckId}`, {
                            method: 'POST',
                        })
                            .then(response => {
                                // Handle the response, e.g., close the modal if successful
                                if (response.status === 200) {
                                    deleteDeckModalBody.textContent = 'Deck was deleted successfully';
                                    deleteDeckModalFooter.innerHTML = '<button type="button" class="btn btn-primary" data-bs-dismiss="modal" id="closeDeleteDeckModal">Close</button>';
                                    const closeDeleteDeckModalButton = document.getElementById('closeDeleteDeckModal');
                                    closeDeleteDeckModalButton.addEventListener('click', () => {
                                        window.location.reload();
                                    });
                                }
                            })
                            .catch(error => {
                                // Handle errors, e.g., display an error message
                                console.error('Error deleting deck:', error);
                            });
                    });
                });


            </script>

    </body>

</html>