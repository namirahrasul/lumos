        <%-include('navbar.ejs', { user: user }) %>

            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6">

                        <br>
                        <br>
                        <br>
                        <h1 class="my-2 text-center">Create a Deck</h1>
                        <form id="deck-form">
                            <div class="mb-3">
                                <button type="submit" form="deck-form"
                                    class="btn btn-primary float-end mb-3 d-block">Add Deck</button>
                            </div><br>
                            <div class="mb-3">
                                <label for="name" class="d-block form-label">Name</label>
                                <input type="text" class="form-control" id="create-name" name="name">
                            </div>
                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea class="form-control" id="create-back" name="description" cols="50"
                                    rows="10"></textarea>
                            </div>
                            <div class="mb-3">
                                <label>Category</label><br>

                            </div>
                        </form>
                        <button class="btn btn-dark" id="add-category">Add Category</button>
                    </div>
                </div>
                <div class="modal fade" id="createDeckModal" tabindex="-1" aria-labelledby="createDeckModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="createDeckModalLabel">Create Deck</h5>
                            </div>
                            <div class="modal-body" id="createDeckModalBody">

                            </div>
                            <div class="modal-footer" id="createDeckModalFooter">

                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <script src=" https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js "></script>
            <script src="/js/create-deck.js"> </script>
